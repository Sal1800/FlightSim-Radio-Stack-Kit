		        <CODE_POS_1>(&gt;K:COM1_TRANSMIT_SELECT)</CODE_POS_1>
		        <CODE_POS_2>(&gt;K:COM2_TRANSMIT_SELECT)</CODE_POS_2>
		        <CODE_POS_3>(&gt;K:COM3_TRANSMIT_SELECT)</CODE_POS_3>
		        <CODE_POS_4>0</CODE_POS_4>
		        <CODE_POS_5>0</CODE_POS_5>
<!-- 		        <STATE1_TEST>
					(A:COM TRANSMIT:1, bool)       	
		        </STATE1_TEST> -->
		      </UseTemplate>	    
		     </Component>
		</Template>

